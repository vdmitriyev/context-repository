<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login:"
            android:id="@+id/textView1" android:layout_gravity="center"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="login"
            android:id="@+id/editTextLogin"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/textView" android:layout_gravity="center"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="password"
              android:id="@+id/editTextPassword"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Server:"
              android:id="@+id/textView2" android:layout_gravity="center"/>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="http://server:port/"
              android:id="@+id/editTextServer"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:id="@+id/btnConfigurationsSave" android:layout_gravity="left|center_vertical"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnConfigurationsCancel"/>
</LinearLayout>